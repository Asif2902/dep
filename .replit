run = "cowsay Configure me!"
entrypoint = "README.md"
modules = ["web", "nodejs-20", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cowsay"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Compile Contract"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Serve Frontend"

[[workflows.workflow]]
name = "Compile Contract"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "HARDHAT_DISABLE_TELEMETRY_PROMPT=true npx hardhat compile"

[[workflows.workflow]]
name = "Serve Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000 --bind 0.0.0.0 -d ./public"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37647
externalPort = 3000

[[ports]]
localPort = 39853
externalPort = 3001

[userenv]

[userenv.shared]
HARDHAT_DISABLE_TELEMETRY_PROMPT = "true"
